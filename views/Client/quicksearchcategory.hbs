<!-- ================ start banner area ================= -->
<section class="blog-banner-area" id="contact">
    <div class="container h-100">
        <div class="blog-banner">
            <div class="text-center">
                <nav aria-label="breadcrumb" class="banner-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><a href="/category">Category</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- ================ end banner area ================= -->
{{#if Category}}
<!-- Categories Section End -->
<div style="margin-bottom:5rem;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Category</h2>
                </div>
            </div>
            <div class="categories__slider owl-carousel">
                {{#each Category}}
                <div class="col-lg-3">
                    <div class="categories__item set-bg border2 border-dark" data-setbg={{this.imgPath}}
                        style="border-radius: 10px;">
                        <h5><a href="/product/search?namecategory={{this.name}}&page=1">{{this.name}}</a></h5>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
<!-- Related Product Section End -->
{{/if}}

