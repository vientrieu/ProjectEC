<!-- Humberger Begin -->
<div class="humberger__menu__overlay"></div>
<div class="humberger__menu__wrapper">
    <div class="humberger__menu__logo">
        <a href="#"><img src="/img/logo.png" alt=""></a>
    </div>
    <div class="humberger__menu__cart">
        <ul>
            <li><a href="/cart"><i class="fas fa-cart-plus"></i> <span id="cart-badge">{{totalQuantity}}</span></a></li>
            <li>
                <div class="header__top__right__auth">
                    <div class="dropdown">
                        <a class="btn btn-secondary dropdown-toggle" href="/login/?retUrl=/" role="button"
                            id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user"></i>
                            {{#if User}}
                            {{#each User}}
                            {{email}}
                            {{/each}}
                            {{else}}
                            Login
                            {{/if}}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
    <nav class="humberger__menu__nav mobile-menu">
        <ul>
            <li class="active"><a href="/"><i class="fas fa-home"></i>Home</a></li>
            <li><a href="/product/Allproduct?page=1"><i class="fas fa-store"></i>Shop</a></li>
            <li><a href="/blog"><i class="fab fa-blogger"></i>Blog</a></li>
            <li><a href="/contact"><i class="fas fa-voicemail"></i>Contact</a></li>
        </ul>
    </nav>
    <div id="mobile-menu-wrap"></div>
</div>
</div>
<!-- Humberger End -->

<!-- Header Section Begin -->
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="header__logo">
                <a href="/"><img src="/img/logo.png" alt=""></a>
            </div>
        </div>
        <div class="col-lg-5">
            <nav class="header__menu">
                <ul>
                    <li class="{{ShopGrid}}"><a href="/product/Allproduct?page=1"><i class="fas fa-store"></i>Shop</a>
                    </li>
                    <li class="{{Cart}}"><a href="/cart"><i class="fas fa-shopping-cart"></i>Cart</a></li>
                    <li class="{{Blog}}"><a href="/blog"><i class="fab fa-blogger"></i>Blog</a></li>
                    <li class="{{Contact}}"><a href="/contact"><i class="fas fa-voicemail"></i>Contact</a></li>
                </ul>
            </nav>
        </div>
        <div class="col-lg-4">
            <div class="header__cart">
                <div class="header__top__right__auth">
                    {{#if User}}
                    <div class="dropdown">
                        <a class="btn dropdown-toggle" href="/login/?retUrl=/" role="button"
                            id="dropdownlogin" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user"></i>
                            {{#each User}}
                            {{email}}
                            {{/each}}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdown">
                            <a class="dropdown-item" href="/login/profile">My Profile</a>
                            <a class="dropdown-item" href="/mycourse">My Courses</a>
                            {{#if isTeacher}}
                            <a class="dropdown-item" href="/myclass">My Classes</a>
                            {{/if}}
                            <a class="dropdown-item" href="/login/logout">Logout</a>
                        </div>
                        {{else}}
                        <a href="/login/?retUrl=/"><i class="fa fa-user"></i>
                            Login
                        </a>
                        {{/if}}

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="humberger__open">
        <i class="fa fa-bars"></i>
    </div>
</div>
</header>
<!-- Header Section End -->
<!-- Hero Section Begin -->
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All</span>
                    </div>
                    <ul class="px-0">
                        <li><a href="/product/Allproduct?page=1"
                                style="font-size: 16px;border-style: solid;border-color: green;text-align: center;border-width: 1px;">All</a>
                        </li>
                        {{#each AllCategory}}
                        <li><a href="/product/search?namecategory={{this.name}}&page=1"
                                style="font-size: 16px;border-style: solid;border-color: green;text-align: center;border-width: 1px;">{{this.name}}</a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="col-lg-6">
                <select id="level" name="level" class="ui dropdown border-success" style="width: 200px; ">
                    <option value="1">Name</option>
                    <option value="2">Category </option>
                    <option value="3">Price</option>
                    <option value="4">Author </option>
                </select>
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form onsubmit="return searchByNameProduct(event)">
                            <input type="text" id="nameproduct" name="nameproduct" placeholder="What do you need?"
                                style="width: 350px;padding-bottom: inherit;">
                            <button type="submit" id="searchButton" onclick="searchByNameProduct()"
                                style="position: unset" ; class="site-btn">SEARCH</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="hero__search__phone">
                    <div class="hero__search__phone__icon">
                        <i class="fa fa-phone"></i>
                    </div>
                    <div class="hero__search__phone__text">
                        <h5>+84123456789</h5>
                        <span>support 24/7 time</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
<!-- Hero Section End -->
<section class="breadcrumb-section set-bg" data-setbg="../../img/banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>{{Page}}</h2>
                </div>
            </div>
        </div>
    </div>
</section>