<!-- ================ start banner area ================= -->
<section class="blog-banner-area" id="contact">
    <div class="container h-100">
        <div class="blog-banner">
            <div class="text-center">
                <nav aria-label="breadcrumb" class="banner-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><a href="/category/author">Author</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- ================ end banner area ================= -->
<!-- Categories Section End -->

<div style="margin-bottom:5rem;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>User</h2>
                </div>
            </div>
            <div class="categories__slider owl-carousel">
                {{#each users}}
                {{#if @first}}
                {{else}}
                <div class="col-lg-3">
                    <div class="categories__item set-bg border2 border-dark" data-setbg={{this.avatar}}
                        style="border-radius: 10px;">
                        <h5><a href="/product/search?author={{this.displayname}}&page=1">{{this.displayname}}</a></h5>
                    </div>
                    <h5 style="text-align: center;">Address: {{address}}</h5>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>
<!-- Related Product Section End -->
