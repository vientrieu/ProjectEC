<div class="container tm-mt-big tm-mb-big">
  <div class="row">
    <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
      <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
        <div class="row">
          <div class="col-12">
            <h2 class="tm-block-title d-inline-block">Add your course</h2>
          </div>
        </div>
        <div class="row tm-edit-product-row">
          <div class="col-xl-6 col-lg-6 col-md-12">
            <form action="/myclass/addcourse" method="POST" class="tm-edit-product-form">
              <div class="form-group mb-3">
                <label for="name">Name
                </label>
                <input id="name" name="name" type="text" class="form-control validate" required />
              </div>
              <div class="form-group mb-3">
                <label for="descriptionshort">Description sort
                </label>
                <input id="descriptionshort" name="descriptionshort" type="text" class="form-control validate"
                  required />
              </div>
              <div class="form-group mb-3">
                <label for="descriptionfull">Description full</label>
               <textarea class="form-control" rows="5" id="descriptionfull" name="descriptionfull"></textarea>
              </div>


          </div>
          <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
            <label for="category">Category</label>
            <div class="form-group ">
              <select class="custom-select tm-select-accounts validate" id="category" name="category" required>
                <option selected> Select category</option>
                <option value="Web Development Tutorial">Web Development Tutorial</option>
                <option value="Big Data">Big Data</option>
                <option value="Programming">Programming</option>
                <option value="DevOps Tools">DevOps Tools</option>
                <option value="Cloud Certification Courses">Cloud Certification Courses</option>
              </select>
            </div>

            <div class="custom-file mt-3 mb-3">
              <label for="pathImg">Image path
              </label>
              <input id="pathImg" name="pathImg" type="text" class="form-control validate" required />
            </div>
            <div class="row">
              <p></p>
              <div class="form-group mb-3 col-xs-12 col-sm-6">
                <p></p>
                <label for="price">Price ($)
                </label>
                <input id="price" name="price" type="text" class="form-control validate" required />
              </div>
              <div class="form-group mb-3 col-xs-12 col-sm-6">
                <p></p>
                <label for="discount">Discount (%)
                </label>
                <input id="discount" name="discount" type="text" class="form-control validate" required />
              </div>
            </div>
          </div>
