<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>My Course</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>My Course</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5">
                {{!-- <div class="blog__sidebar">123</div> --}}
            </div>
            <div class="col-lg-12 col-md-12">
                <!--8-7-->
                <div class="row">

                    {{#each list}}
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <!--6-6-6-->
                        <div class="blog__item">
                            <div class="blog__item__pic">
                                <img src="{{pathImg}}"" alt="">
                            </div>
                            <div class="blog__item__text">
                                <ul>
                                    <li><i class="fa fa-calendar-o"></i> {{createdAt}}</li>
                                    {{!-- <li><i class="fa fa-comment-o"></i> </li> --}}
                                </ul>
                                <h5><a href="/mycourse/{{_id}}">{{name}}</a></h5>
                                <p>{{descriptionshort}} </p>
                                <a href="/mycourse/{{_id}}" class="blog__btn">LEARN MORE <span class="arrow_right"></span></a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Section End -->