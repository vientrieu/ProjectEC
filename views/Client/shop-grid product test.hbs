                <div class="filter__item">
                    <div class="row">
                        <div class="col-lg-4 col-md-5">
                            <div class="filter__sort ">
                                <span>Sort By</span>
                                <select id="sortby" name="sortby" onchange="getValue(this)">
                                    <option value="">Choose </option>
                                    <option value="PriceAscending">Price Ascending </option>
                                    <option value="PriceDescending">Price Descending</option>
                                    <option value="LengthAscending">Name A->Z</option>
                                    <option value="LengthDescending">Name Z->A</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            {{#if querySearch}}
                            <h3 id="querySearch">Find to {{querySearch}}</h3>
                            {{/if}}
                            <div class="filter__found">
                                {{#if Count}}
                                <h6><span>{{Count}}</span> Products found</h6>
                                {{else}}
                                <h4><span>Không tìm thấy sản phẩm</span></h4>
