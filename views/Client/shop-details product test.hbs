<div style="margin-bottom:5rem;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Related Product</h2>
                </div>
            </div>
            <div class="categories__slider owl-carousel">
                {{#each productRelated}}
                <div class="col-lg-3 productRelated">
                        <div class="product__item" style="border:3px;">
                            <div class="product__item__pic set-bg border2 border-dark" data-setbg="{{this.pathImg}}"
                                style="border-radius: 10px;">
                                <ul class="product__item__pic__hover">
                                    <li><a href="/product/details/{{this._id}}"><i class="fas fa-search"></i></a></li>
                                    <li><a onclick="AddToCart(`{{_id}}`)"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="product__item__text">
                                <h6><a href="/product/details/{{this._id}}">{{this.name}}
                                        <div>
                                            <p class="price-product">Author:{{author.name}}</p>
                                            <p class="price-product"> Rating: <span class="hl">{{rating}}</span>,
                                                Comment:
                                                <span class="hl">{{comment.length}}</span></p>
                                        </div></a>

                                </h6>
                                <h5 class="price-product"><b>{{price}}$</b></h5>
                            </div>
                        </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
<!-- Related Product Section End -->
