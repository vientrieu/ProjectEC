<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Danh sách khách hàng</h3>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort">ID</th>
                                <th scope="col" class="sort">Họ tên</th>
                                <th scope="col" class="sort">Email</th>
                                <th scope="col" class="sort">Avatar</th>
                                <th scope="col" class="sort">Loại thành viên</th>
                                <th scope="col" class="sort">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            {{#each list}}
                            <tr id="{{_id}}">
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">{{_id}}</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">
                                    {{displayname}}
                                </td>
                                <td>
                                    <span class="status">{{email}}</span>
                                </td>
                                <td>
                                    <a href="#" class="avatar avatar-sm rounded-circle" data-toggle="tooltip"
                                        data-original-title="Ryan Tompson">
                                        <img alt="Image placeholder" src="{{avatar}}">
                                    </a>
                                </td>
                                {{#if role}}
                                <td id="loaiuser{{_id}}">
                                    Học Viên
                                </td>
                                <td>
                                    <button type="button" class="btn btn-danger btn-rounded btn-sm my-0"
                                        onclick="RemoveUser(`{{_id}}`)">Delete</button>
                                    <button type="button" class="btn btn-success btn-rounded btn-sm my-0"
                                        id="btn-upgrade{{_id}}" onclick="UpgradeUser(`{{_id}}`)">Upgrade</button>
                                </td>

                                {{else}}
                                <td id="loaiuser{{_id}}">
                                    Giáo Viên
                                </td>
                                <td>
                                    <button type="button" class="btn btn-danger btn-rounded btn-sm my-0"
                                        onclick="RemoveUser(`{{_id}}`)">Delete</button>
                                </td>
                                {{/if}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- Card footer -->
                <div class="card-footer py-4">
                    <nav aria-label="...">
                       Có tổng cộng {{totalpages}} trang, đến trang số 
                        <input id="gotopage" type="text" style="width:2rem"><span id="a">  <a href="" class="btn btn-danger btn-rounded btn-sm my-0" >Đi đến</a></span>
                        <ul class="pagination justify-content-end mb-0">
                            {{#if prev}}
                            <li class="page-item">
                                <a class="page-link" href="{{prev}}">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="{{prev}}">{{prev}}</a>
                            </li>
                            {{/if}}
                            <li class="page-item active">
                                <a class="page-link" href="">{{now}} <span class="sr-only">(current)</span></a>
                            </li>
                            {{#if next}}
                            <li class="page-item">
                                <a class="page-link" href="{{next}}">{{next}}</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="{{next}}">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                            {{/if}}
                        </ul>
                        <p class="pagination justify-content-end mb-0"></p>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>