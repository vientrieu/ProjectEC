<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Danh sách sản phẩm</h3>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort">Mã sản phẩm</th>
                                <th scope="col" class="sort">Tên sản phẩm</th>
                                <th scope="col" class="sort">Loại</th>
                                <th scope="col" class="sort">Tác giả</th>
                                <th scope="col" class="sort">Mô tả</th>
                                <th scope="col" class="sort">Giá</th>
                                <th scope="col" class="sort">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            {{#each list}}
                            <tr id="{{_id}}">
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">{{_id}}</span>
                                        </div>
                                    </div>
                                </th>
                                <td>
                                    {{name}}
                                </td>
                                <td>
                                    {{category.name}}
                                </td>
                                <td >
                                    {{author.name}}
                                </td>
                                <td >
                                    {{descriptionshort}}
                                </td>
                                <td >
                                    {{price}}
                                </td>
                                {{#if check}}
                                <td>
                                    <button type="button" class="btn btn-danger btn-rounded btn-sm my-0" onclick="RemoveProduct(`{{_id}}`)">Delete</button>
                                </td>
                                {{else}}
                                <td>
                                    <button type="button" class="btn btn-danger btn-rounded btn-sm my-0" onclick="RemoveProduct(`{{_id}}`)">Delete</button>
                                     <button type="button" class="btn btn-success btn-rounded btn-sm my-0" id="btn-upgrade{{_id}}"
                                        onclick="UpgradeProduct(`{{_id}}`)">Upgrade</button>
                                </td>
                                {{/if}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- Card footer -->
                <div class="card-footer py-4">
                    <nav aria-label="...">
                        Có tổng cộng {{totalpages}} trang, đến trang số 
                        <input id="gotopage" type="text" style="width:2rem"><span id="a">  <a href="" class="btn btn-danger btn-rounded btn-sm my-0" >Đi đến</a></span>
                        <ul class="pagination justify-content-end mb-0">
                            {{#if prev}}
                            <li class="page-item">
                                <a class="page-link" href="{{prev}}">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="{{prev}}">{{prev}}</a>
                            </li>
                            {{/if}}
                            <li class="page-item active">
                                <a class="page-link" href="">{{now}} <span class="sr-only">(current)</span></a>
                            </li>
                            {{#if next}}
                            <li class="page-item">
                                <a class="page-link" href="{{next}}">{{next}}</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="{{next}}">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                            {{/if}}
                        </ul>
                        <p class="pagination justify-content-end mb-0"></p>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>