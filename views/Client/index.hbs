<!-- Categories Section Begin -->
<div style="margin-top:5rem;">
    <section class="categories">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>All Category</h2>
                    </div>
                </div>
                <div class="categories__slider owl-carousel">
                    {{#each Category}}
                    <div class="col-lg-3">
                        <div class="categories__item set-bg border2 border-dark" data-setbg={{this.imgPath}} style="border-radius: 10px;">
                            <h5><a href="/product/search?namecategory={{this.name}}&page=1">{{this.name}}</a></h5>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
</div>
<!-- Categories Section End -->

<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>New Courses</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            {{#each Product}}
            <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                <div class="featured__item">
                    <div class="featured__item__pic set-bg border2 border-dark" data-setbg="{{pathImg}}" style="border-radius: 10px;">
                        <ul class="featured__item__pic__hover">
                            <li><a href="/product/details/{{this._id}}"><i class="fas fa-search"></i></a></li>
                                    <li><a onclick="AddToCart(`{{_id}}`)"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="featured__item__text">
                        <h6><a href="#">{{name}}</a></h6>
                        <h5>{{price}}$</h5>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>