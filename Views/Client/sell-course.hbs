<!-- Main content -->
<div class="main-content">
  <!-- Header -->
  <div class="header bg-gradient-primary py-7 py-lg-8 pt-lg-9">
    <div class="container">
      <div class="header-body text-center mb-3">
        <div class="row justify-content-center">
          <h1 class="text-black">Add your course</h1>
        </div>
      </div>
    </div>
    <div class="separator separator-bottom separator-skew zindex-100">
      <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1"
        xmlns="http://www.w3.org/2000/svg">
        <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
      </svg>
    </div>
  </div>
  <!-- Page content -->
  <div class="container mt--8 pb-5">
    <!-- Table -->
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8">
        <div class="card bg-secondary border-0">
          <div class="card-header bg-transparent pb-5">
          <div class="card-body px-lg-5 py-lg-5">
            <!--{{#if message.length}}
            <div>
              {{message}}
            </div>
            {{/if}}-->
            <form action="/myclass/addcourse" method="POST">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" />
              </div>
              <div class="form-group">
                <label for="category">Category</label>
                <input type="category" id="category" name="category" class="form-control" placeholder="Enter Category" />
              </div>
              <div class="form-group">
                <label for="descriptionshort">Description short</label>
                <input type="descriptionshort" id="descriptionshort" name="descriptionshort" class="form-control"
                  placeholder="Enter Short Description" />
              </div>
              <div class="form-group">
                <label for="descriptionfull">Description full</label>
                <input type="descriptionfull" id="descriptionfull" name="descriptionfull" class="form-control"
                  placeholder="Enter Full Description" />
              </div>
              <div class="form-group">
                <label for="price">Price</label>
                <input type="price" id="price" name="price" class="form-control" placeholder="Price" />
              </div>
              <div class="form-group">
                <label for="pathImg">Image</label>
                <input type="pathImg" id="pathImg" name="pathImg" class="form-control" placeholder="Image path" />
              </div>
              <div class="form-group">
                <label for="video">Image</label>
                <input type="video" id="video" name="video" class="form-control" placeholder="Video path" />
              </div>
              <div class="form-group">
                <label for="discount">Discount</label>
                <input type="discount" id="discount" name="discount" class="form-control" placeholder="Discount" />
              </div>
              
          </div>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary mt-4">Add course</button>
        </div>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
</div>