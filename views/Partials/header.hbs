<!-- Hero Section Begin -->
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div id="menu_dropdown" class="dropdown show">
                    <a class="btn btn-success btn-lg btn-block dropdown-toggle" href="#" role="button"
                        id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        All
                    </a>
                    <div id="mn-p" class="dropdown-menu " aria-labelledby="dropdownMenuLink" style=" width:100%" >
                        <button  class=" btn btn-outline-success btn-lg btn-block" > <a href="/category">Category</a> </button>
                        <button  class=" btn btn-outline-success btn-lg btn-block"><a href="/category/author">Author</a></button>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <select id="level" name="level" class="ui dropdown border-success" style="width: 200px; ">
                    <option value="1">Name</option>
                    <option value="2">Category </option>
                    <option value="3">Price</option>
                    <option value="4">Author </option>
                </select>
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form onsubmit="return searchByNameProduct(event)">
                            <input type="text" id="nameproduct" name="nameproduct" placeholder="What do you need?"
                                style="width: 350px;padding-bottom: inherit;">
                            <button type="submit" id="searchButton" onclick="searchByNameProduct()"
                                style="position: unset" ; class="site-btn">SEARCH</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="hero__search__phone">
                    <div class="hero__search__phone__icon">
                        <i class="fa fa-phone"></i>
                    </div>
                    <div class="hero__search__phone__text">
                        <h5>+84123456789</h5>
                        <span>support 24/7 time</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
